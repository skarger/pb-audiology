<html class="h-full">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <head>
        <link rel="stylesheet" href="/main.css">
    </head>

    <body class="h-full">
        <div class="wrapper">
            <div class="header p-2 flex flex-col items-center justify-between sm:flex-row sm:items-stretch" itemscope itemtype="http://schema.org/Person">
                <span itemprop="name"><%= NAME %>, <%= CREDENTIALS %></span>
                <span itemprop="telephone"><%= telephone %></span>
                <span class="flex justify-between sm:flex-col sm:justify-start" itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                    <span class="pr-2 sm:pr-0 sm:pb-2" itemprop="streetAddress"><%= street_address %></span>
                    <span class="pl-2 sm:pl-0"><span itemprop="addressLocality"><%= address_locality %></span>, <span itemprop="addressRegion"><%= address_region %></span> <span itemprop="postalCode"><%= postal_code %></span></span>
                </span>
            </div>
            <div class="navigation p-2 flex justify-around items-center md:items-stretch md:flex-col md:justify-start">
                <span class="md:pb-2">About</span><a class="md:pb-2" href="/contact"><span>Contact Us</span></a><span>FAQ</span>
            </div>
            <div class="main p-2">
                <%= yield %>
            </div>
            <div class="related-links p-2">
                Related Links
            </div>
            <div class="footer">
                Footer
            </div>
        </div>
    </body>
</html>
