<html>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <head>
        <link rel="stylesheet" href="/main.css">
        <script type="application/ld+json">
            {
                "@context": "http://schema.org",
                "@type": "Person",
                "name": "<%= name %>, <%= credentials %>",
                "address": {
                    "@type": "PostalAddress",
                    "streetAddress": "<%= street_address %>",
                    "addressLocality": "<%= address_locality %>",
                    "addressRegion": "<%= address_region %>",
                    "postalCode": "<%= postal_code %>"
                },
                "telephone": "<%= telephone %>"
            }
        </script>
    </head>

    <body class="bg-white font-sans text-teal-darkest">
        <div class="wrapper">
            <div class="header whitespace-no-wrap font-serif text-xl md:text-2xl text-orange p-2 flex flex-col items-center justify-between lg:flex-row lg:items-stretch">
                <span class="text-2xl md:text-3xl"><%= name %>, <span class="text-orange-lighter"><%= credentials %></span></span>
                <span><a href="tel:<%= telephone %>"><%= telephone %></a></span>
                <span class="flex justify-between lg:flex-col lg:justify-start">
                    <span class="pr-2 lg:pr-0 lg:pb-2"><%= street_address %></span>
                    <span class="pl-2 lg:pl-0"><span><%= address_locality %></span>, <span><%= address_region %></span> <span><%= postal_code %></span></span>
                </span>
            </div>
            <div class="navigation p-2 flex justify-around items-center md:items-stretch md:flex-col md:justify-start">
                <a class="<%= current_path == '/' ? 'text-orange bg-teal-darker rounded-lg' : 'text-teal-darkest' %>" href="/">
                    <div class="p-4">Home</div>
                </a>
                <a class="<%= current_path == '/about' ? 'text-orange bg-teal-darker rounded-lg' : 'text-teal-darkest' %>" href="/about">
                    <div class="p-4">About</div>
                </a>
                <a class="<%= current_path == '/contact' ? 'text-orange bg-teal-darker rounded-lg' : 'text-teal-darkest' %>" href="/contact">
                    <div class="p-4">Contact Us</div>
                </a>
                <a class="<%= current_path == '/faq' ? 'text-orange bg-teal-darker rounded-lg' : 'text-teal-darkest' %>" href="/faq">
                    <div class="p-4">FAQ</div>
                </a>
            </div>
            <div class="main p-2 text-xl leading-loose md:leading-normal">
                <%= yield %>
            </div>
            <div class="related-links p-2">
                <img class="aba-image float-right mt-5 xl:mt-0" src="/images/ABA-Logo-Tagline-Color.jpg" alt="American Board of Audiology - Board Certified in Audiology">
            </div>
            <div class="footer">
            </div>
        </div>
    </body>
</html>
